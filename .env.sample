# Environment Variables Configuration Sample
# Copy this file to .env and fill in your actual values

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Facebook API
# Get a long-lived access token from Facebook Graph API Explorer
LONG_LIVED_TOKEN=your_facebook_long_lived_token_here

# Google Maps API
# Required for geocoding venue addresses
GOOGLE_API_KEY=your_google_maps_api_key_here

# OpenAI API
# Used for artist extraction from event descriptions
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# SoundCloud API
# Required for artist profile enrichment
SOUND_CLOUD_CLIENT_ID=your_soundcloud_client_id_here
SOUND_CLOUD_CLIENT_SECRET=your_soundcloud_client_secret_here

# Last.fm API
# Optional: Used for additional music metadata
LASTFM_API_KEY=your_lastfm_api_key_here

# Cloudflare R2 Storage
# Used for uploading entity images (events, artists, venues, promoters)
# Get credentials from Cloudflare R2 dashboard > API Tokens
R2_ACCOUNT_ID=your_r2_account_id_here
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev
